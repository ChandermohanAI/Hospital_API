@model IEnumerable<Hospital_Web.Models.DTO.Doctor.Doctor_DTO>
<br />
<div class="container p-4 border">
	<div class="row pb-2">
		<div class="col">
			<h1 class="text-primary">Doctor List</h1>
		</div>
		<div class="col text-end pt-1">
			<a asp-controller="HospitalAPI" asp-action="CreateDoctor" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Create New Doctor</a>
		</div>
	</div>

	<table class="table">
		<thead>
			<tr>
				<th>Name</th>
				<th>Age</th>
				<th>Speciality</th>
				<th>Experience</th>
				<th>Price</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Name</td>
					<td>@((item.Age).ToString("c"))</td>
					<td>@item.Speciality</td>
					<td>@((item.Experience).ToString("c"))</td>
					<td>@((item.Price).ToString("c"))</td>

					<td>
						<a asp-controller="HospitalAPI" asp-action="UpdateDoctor" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i></a>
						<a asp-controller="HospitalAPI" asp-action="DeleteeDoctor" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i></a>
					</td>
				</tr>
			}
		</tbody>
	</table>

</div>